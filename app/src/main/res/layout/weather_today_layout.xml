<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.backbase.weatherapp.details.DetailBindingModel"/>
    </data>
    <RelativeLayout
        android:id="@+id/todaylayout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="10dp"
        app:theme="@style/AppTheme"
        android:background="@color/colorWeatherBackgroundClearDay">

        <ImageView
            android:id="@+id/statusimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sun"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.city}"
            android:layout_marginTop="10dp"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/currentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/city"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.currentDate}"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusimage"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.temp}"
            android:textSize="100sp"/>

        <TextView
            android:id="@+id/tempmaxlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="Max: "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tempmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp"
            android:layout_toRightOf="@id/tempmaxlabel"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.temp_max}"
            android:layout_marginRight="5dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tempminlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp"
            android:layout_toRightOf="@id/tempmax"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="Min: "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tempmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temp"
            android:layout_toRightOf="@id/tempminlabel"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.temp_min}"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusimage"
            android:textColor="@color/colorWeatherTextClearDay"
            android:layout_toRightOf="@id/temp"
            android:layout_marginTop="15dp"
            android:text="O"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusimage"
            android:layout_toRightOf="@id/dot"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.tempUnit}"
            android:textSize="60sp"
            />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/temp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.humidity}"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/humidityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/temp"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@id/humidity"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="Humidity: "
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/humidity"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.wind}"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/windTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/wind"
            android:layout_below="@id/humidityTitle"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="Wind: "
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wind"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWeatherTextClearDay"
            android:text="@{model.rainChance}"
            android:textSize="20sp"
            />

    </RelativeLayout>
</layout>
